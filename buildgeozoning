# with internal functions
cd ~/BUILDgeozoning-28sept2017
cd geozoning

rm -rf vignettes/*
cp ~/GEOZPKG/geozoning/vignettes/*Rmd vignettes/
cp ~/GEOZPKG/geozoning/vignettes/*pdf vignettes/
cp ~/GEOZPKG/geozoning/R/*R R
rm R/.RData R/done R/help
rm -rf man/*
cp ~/GEOZPKG/geozoning/man/*Rd man
cp ~/GEOZPKG/geozoning/DESCRIPTION .
cp ~/GEOZPKG/geozoning/NAMESPACE .
rm -rf data/*
cp ~/GEOZPKG/geozoning/data/*rda data
rm -rf inst
cp -r ~/GEOZPKG/geozoning/inst .

cd ..

# R CMD check --as-cran geozoning >err
# R CMD check --as-cran --no-vignettes geozoning >err
R CMD build --no-build-vignettes geozoning >err
